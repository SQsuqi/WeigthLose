<!--pages/addRecording.wxml-->
<view class="add">
  <form bindsubmit="formSubmit">
    <van-cell-group>
      <van-field
        label="食品名称"
        placeholder="请输入食品名称"
        border="{{ false }}"
        name="name"
        bind:change="onChange"
        model:value="{{ value }}"
        clearable="true"
      />
    </van-cell-group>
    <view class="btn-container">
      <van-button custom-class="btnadd" color="red" form-type="submit" block>添加</van-button>
    </view>
    <van-toast id="van-toast" />
  </form>
</view>
